@using Assignment_2_Matthew_Lane.Models
@model IEnumerable<FoodType>

@{
    ViewBag.Title = "Index";

}

<!--Pose question about what they want to see, provide links.
    This function ties the links into the controller items in the MenuController class-->
<h3>Browse Food Types</h3>
<p>
    Select the type of food you wish to view:
</p>
<ul>
    @foreach (FoodType item in Model)
    {
        <li>@Html.ActionLink(@item.Name, "Browse", new { FoodType = @item.Name })</li>
    }
</ul>

